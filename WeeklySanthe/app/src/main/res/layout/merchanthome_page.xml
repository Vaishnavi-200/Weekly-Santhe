<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:scrollbarSize="0sp"
    tools:context=".MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/hb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME PAGE"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp"
            android:textColor="#3B1E08"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/card_m1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/l1"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@drawable/vgg"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_marginTop="86dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_m"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_m2"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/l2"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@drawable/fr"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_m1"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_m3"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/l3"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@drawable/gg"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:text="GROCERIES"
                    android:textColor="#532915"
                    android:layout_marginTop="65dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_m2"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_m4"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/l4"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@drawable/fee"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_m3"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_m5"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/l5"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@drawable/abo"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_m4"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
</ScrollView>