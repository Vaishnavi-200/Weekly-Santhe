<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="35dp"
        android:layout_margin="20dp"
        android:background="@drawable/hh"
        android:id="@+id/cv_veg"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gt"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD GROCERIES DETAILS "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginTop="60dp"
                />
            <EditText
                android:id="@+id/e_gm"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Enter Groceries name:"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/e_gm1"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Enter Price:"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/e_gm2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Enter Date:"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/e_gm3"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Enter City:"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/e_gm4"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Enter Location"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/e_gm5"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="About Groceries:"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                />
            <Button
                android:id="@+id/add3_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="ADD"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="#00B7EB"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>