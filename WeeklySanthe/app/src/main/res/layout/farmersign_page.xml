<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gg">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="35dp"
        android:layout_margin="20dp"
        android:id="@+id/cv"
        >




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textColor="#299438"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/btn_fsignup"/>

            <EditText
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Full Name:"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_fname"/>

            <EditText
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Mobile No.:"
                android:maxLength="10"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_fmobile"/>

            <EditText
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Email Id:"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_femail"/>

            <EditText
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Aadhar No:"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_faadhar"/>

            <EditText
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="City:"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_city"/>

            <EditText
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:hint="Password :"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_password"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:background="#299438"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/btn_fsignup1"
                android:textColor="#FFFFFF"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>



